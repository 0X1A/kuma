BasedOnStyle: LLVM
IndentWidth: 8
UseTab: Always
BreakBeforeBraces: Attach
AllowShortIfStatementsOnASingleLine: false
IndentCaseLabels: false
AccessModifierOffset: -8
SpacesInParentheses: false
MaxEmptyLinesToKeep: 2
PointerAlignment: Right
IncludeCategories:
  - Regex: '^(<SDL)'
    Priority: 1
  - Regex: '^(<)'
    Priority: 2
  - Regex: '^(")'
    Priority: 3

